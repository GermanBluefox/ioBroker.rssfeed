{
  "name": "iobroker.rssfeed",
  "version": "2.8.0",
  "description": "Adapter and vis widget for rss feeds",
  "author": {
    "name": "oweitman",
    "email": "oweitman@gmx.de"
  },
  "homepage": "https://github.com/oweitman/ioBroker.rssfeed",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "rss",
    "atom",
    "rdf",
    "feed"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:oweitman/ioBroker.rssfeed.git"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.7",
    "chardet": "^1.5.1",
    "ejs": "^3.1.9",
    "feedparser": "^2.2.10",
    "iconv-lite": "^0.6.3",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/adapter-react": "2.2.4",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node14": "^1.0.3",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "proxyquire": "^2.1.3",
    "sinon": "^15.0.2",
    "sinon-chai": "^3.7.0",
    "typescript": "~4.9.5"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "widgets/**/!(tsconfig|tsconfig.*|.eslintrc).json",
    "widgets/**/*.{html,css,png,svg,jpg,js}",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint --ext .js,.jsx .",
    "translate": "translate-adapter",
    "release": "release-script",
    "release-patch": "release-script patch --yes --no-update-lockfile",
    "release-minor": "release-script minor --yes --no-update-lockfile",
    "release-major": "release-script major --yes --no-update-lockfile",
    "upload": "NPM_PACK=$(npm pack) && iob url \"$(pwd)/$NPM_PACK\" --debug && rm \"$NPM_PACK\""
  },
  "bugs": {
    "url": "https://github.com/oweitman/ioBroker.rssfeed/issues"
  },
  "readmeFilename": "README.md"
}
